<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/im_users_row"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@mipmap/default_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_users_row_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/im_users_row"
        android:layout_marginStart="23dp"
        android:layout_toEndOf="@+id/im_users_row"
        android:text="@string/display_name"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/im_users_row"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_users_row_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_users_row_display_name"
        android:layout_below="@+id/tv_users_row_display_name"
        android:layout_marginTop="15dp"
        android:text="@string/status_settings"
        app:layout_constraintStart_toEndOf="@+id/im_users_row"
        app:layout_constraintTop_toBottomOf="@+id/tv_users_row_display_name" />

</RelativeLayout>